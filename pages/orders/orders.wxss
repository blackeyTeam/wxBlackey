page {
  background: #f5f6f7;
}
.head-nav {
  width: 100%;
  height: 100rpx;
  font-size: 0;
  background-color: #fff;
}

.head-nav .txt {
  height: 80rpx;
  line-height: 100rpx;
  text-align: center;
  display: inline-block;
  margin: 0 30rpx;
  font-size: 30rpx;
}

.head-nav .selected {
  border-bottom: 6rpx solid #FFC90E;
  font-weight: bold;
}

.order-list {
  padding: 30rpx;
  font-size: 0;
}

.items {
  width: 100%;
  height: auto;
  border-bottom: 1rpx solid #ccc;
  font-size: 0;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.items .item-img {
  width: 100%;
  height: 350rpx;
  background-color: #ccc;
}
.items .item-content {
  padding: 10rpx 0 20rpx;
}
.item-content .label {
  display: inline-block;
  font-size: 24rpx;
  font-weight: normal;
  padding: 5rpx 15rpx;
  background: #FFD945;
  vertical-align: top;
}
.item-content .title {
  display: inline-block;
  font-size: 32rpx;
  margin: 10rpx 0 20rpx;
  font-weight: bold;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.item-content .price {
  display: block;
  font-size: 36rpx;
  color: #F56C6C;
}
.item-content .salePrice {
  display: block;
  font-size: 24rpx;
  margin-bottom: 30rpx;
  color: #999;
}
.item-content .order-btn {
  float: right;
  font-size: 28rpx;
  padding: 14rpx 24rpx;
  color: #FFC90E;
  border: 1rpx solid #FFC90E;
  border-radius: 6rpx;
}
.item-content .gray {
  color: #ccc;
  border: 1rpx solid #ccc;
}
