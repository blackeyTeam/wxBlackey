page {
  background: #f5f6f7;
}
.userinfo {
  display: flex;
  height: 300rpx;
  flex-direction: row;
  align-items: left;
  background-color: #1296db;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx 80rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  background-color:#fff;
}

.userinfo-nickname {
  color: #fff;
  margin-top:40rpx;
}

.order {
  width: 94%;
  margin: -90rpx auto 20rpx;
  border-radius: 5rpx;
  background-color: #fff;
  font-size: 0;
  box-sizing: border-box;
}

.order .order-head {
  font-size: 32rpx;
  padding: 30rpx;
  border-bottom: 1rpx solid #ccc;
  margin: 0 30rpx;
}

.order .order-body {
  font-size: 32rpx;
  padding: 30rpx 0;
  display: flex;
}

.order .order-body .order-body-item {
  flex: 1;
  text-align: center;
}

.order-body-item .icon{
  display: block;
  font-size: 46rpx;
  line-height: 64rpx;
}
.order-body-item .txt{
  display: block;
  font-size: 26rpx;
  color: #666;
}

.customer-service,
.about {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.customer-service .icon,
.about .icon {
  float: right;
}