/**index.wxss**/
swiper {
  height: 400rpx;
}
swiper-item {
  overflow: visible;
}
.header {
  position: relative;
  font-size: 0;
}
.header .banner {
  width: 100%;
  height: 400rpx;
  position: relative
}
.header .banner .banner-img{
  width: 100%;
  height: 100%;
}
.header .banner .gradient{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(transparent 90%, #fff 99%);
}
.overview {
  width: 80%;
  position: absolute;
  bottom: -20%;
  left:50%;
  transform:translateX(-50%);
  box-shadow: 0 4rpx 16rpx 0 #ccc;
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx 0;
}
.overview .slogen {
  text-align: center;
  font-size: 36rpx;
  font-style:italic;
  margin-bottom: 30rpx;
}
.overview .overview-content {
  display: flex;
}
.overview-content .overview-item {
  flex: 1;
}
.overview-item .num {
  font-size: 32rpx;
  text-align: center;
  color: #F56C6C;
}
.overview-item .txt {
  font-size: 24rpx;
  text-align: center;
}
.list {
  background-color: #fff;
  padding: 30rpx;
  font-size: 0;
}
.items {
  width: 100%;
  height: auto;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  box-shadow: 0 4rpx 16rpx 0 #ccc;
  box-sizing: border-box;
  font-size: 0;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.items .item-img {
  width: 100%;
  height: 350rpx;
  background-color: #ccc;
}
.items .item-content {
  padding: 10rpx 30rpx 20rpx;
}
.item-content .title {
  display: block;
  font-size: 32rpx;
  margin: 10rpx 0 20rpx;
  font-weight: bold;
}
.item-content .price {
  display: inline-block;
  margin-right: 10rpx;
  font-size: 36rpx;
  color: #F56C6C;
}
.item-content .salePrice {
  font-size: 26rpx;
  text-decoration:line-through;
}
.item-content .sold {
  margin-top: 10rpx;
  float: right;
  font-size: 28rpx;
  color: #F56C6C;
}


@keyframes move_wave {
  0% {
      transform: translateX(0) translateZ(0) scaleY(1)
  }
  50% {
      transform: translateX(-25%) translateZ(0) scaleY(0.6)
  }
  100% {
      transform: translateX(-50%) translateZ(0) scaleY(1)
  }
}
.waveWrapperInner {
  position: absolute;
  width: 100%;
  overflow: hidden;
  height: 100%;
  left: 0;
  bottom: -1px;
}
.bgBottom {
    z-index: 5;
}
.wave {
    position: absolute;
    left: 0;
    width: 200%;
    height: 100%;
    background-repeat: repeat no-repeat;
    background-position: 0 bottom;
    transform-origin: center bottom;
}
.waveBottom {
  background-size: 50% 100px;
  animation: move_wave 5s linear infinite;
}